local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local Window = Rayfield:CreateWindow({
    Name = "Rimuru OP Hub - Arise Crossover",
    LoadingTitle = "Predator Mode Activated",
    LoadingSubtitle = "by Rimuru ðŸ˜ˆ",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "AriseCrossoverHub",
        FileName = "Config"
    }
})

-- Auto Farm Tab
local FarmTab = Window:CreateTab("Auto Farm", 4483362458)

local npcList = {
    "NPC 1b8116dc9f484d4faa87ef59ea836923",
    "NPC 27c34f6ca30f4b409a8304053f5e45b6",
    "NPC 36aa3453dccb4c2ab33ee5c573c2833b",
    "NPC 4fa8d736a3f749ccbc0f4989ed3f4472",
    "NPC 595c3cb8aa124d2a8a2f90de5b5de3d2",
    "NPC 6463f76454f042eca313ed76c8d2729e",
    "NPC 64e84d8222e5418ea08d538b74b8f02f",
    "NPC 6aa73466ea474ddd87d7aca512dccd7c",
    "NPC 6baee8d782c7479d9403a2353c8630de",
    "NPC 7121b513c608408bb5073b7cd2e798f9",
    "NPC 86e77407733e4efb8840f27a4e12d971",
    "NPC 96044668b7f1429fb8e8a11654b420a9"
}

local npcMap = {
    ["NPC 1b8116dc9f484d4faa87ef59ea836923"] = workspace.__Main.__Enemies.Client["1b8116dc9f484d4faa87ef59ea836923"],
    ["NPC 27c34f6ca30f4b409a8304053f5e45b6"] = workspace.__Main.__Enemies.Client["27c34f6ca30f4b409a8304053f5e45b6"],
    ["NPC 36aa3453dccb4c2ab33ee5c573c2833b"] = workspace.__Main.__Enemies.Client["36aa3453dccb4c2ab33ee5c573c2833b"],
    ["NPC 4fa8d736a3f749ccbc0f4989ed3f4472"] = workspace.__Main.__Enemies.Client["4fa8d736a3f749ccbc0f4989ed3f4472"],
    ["NPC 595c3cb8aa124d2a8a2f90de5b5de3d2"] = workspace.__Main.__Enemies.Client["595c3cb8aa124d2a8a2f90de5b5de3d2"],
    ["NPC 6463f76454f042eca313ed76c8d2729e"] = workspace.__Main.__Enemies.Client["6463f76454f042eca313ed76c8d2729e"],
    ["NPC 64e84d8222e5418ea08d538b74b8f02f"] = workspace.__Main.__Enemies.Client["64e84d8222e5418ea08d538b74b8f02f"],
    ["NPC 6aa73466ea474ddd87d7aca512dccd7c"] = workspace.__Main.__Enemies.Client["6aa73466ea474ddd87d7aca512dccd7c"],
    ["NPC 6baee8d782c7479d9403a2353c8630de"] = workspace.__Main.__Enemies.Client["6baee8d782c7479d9403a2353c8630de"],
    ["NPC 7121b513c608408bb5073b7cd2e798f9"] = workspace.__Main.__Enemies.Client["7121b513c608408bb5073b7cd2e798f9"],
    ["NPC 86e77407733e4efb8840f27a4e12d971"] = workspace.__Main.__Enemies.Client["86e77407733e4efb8840f27a4e12d971"],
    ["NPC 96044668b7f1429fb8e8a11654b420a9"] = workspace.__Main.__Enemies.Client["96044668b7f1429fb8e8a11654b420a9"]
}

local selectedNPC = npcList[1]
local autofarm = false

local npcDropdown = FarmTab:CreateDropdown({
    Name = "Select NPC",
    Options = npcList,
    CurrentOption = npcList[1],
    Flag = "NPCDropdown",
    Callback = function(option)
        selectedNPC = option
    end,
})

FarmTab:CreateToggle({
    Name = "Auto Farm NPC",
    CurrentValue = false,
    Flag = "AutoFarmToggle",
    Callback = function(Value)
        autofarm = Value
        LocalPlayer:SetAttribute("AutoClick", Value)

        if autofarm then
            task.spawn(function()
                while autofarm do
                    local npc = npcMap[selectedNPC]
                    local char = LocalPlayer.Character
                    if npc and npc:FindFirstChild("Hitbox") and char and char:FindFirstChild("HumanoidRootPart") then
                        char.HumanoidRootPart.CFrame = CFrame.new(npc.Hitbox.Position + Vector3.new(0, 3, 0))
                        LocalPlayer:SetAttribute("AutoClick", true)
                    else
                        LocalPlayer:SetAttribute("AutoClick", false)
                    end
                    task.wait(0.2)
                end
            end)
        end
    end,
})
